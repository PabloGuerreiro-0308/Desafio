@model DESAFIO.Models.estudante

@{
    ViewData["Title"] = "Deletar aluno";
}

<h2>Você tem realmente deseja apagar as informações do aluno?</h2>
<div>
    <h4>estudante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="matricula" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
